{
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint-js": "eslint . --ext \".svelte,.js\" --cache",
    "lint-js:fix": "pnpm run lint-js -- --fix",
    "lint-css": "stylelint . --cache",
    "lint-css:fix": "pnpm run lint-css -- --fix",
    "lint-svelte": "svelte-check --workspace attractions --output human --fail-on-warnings; svelte-check --workspace docs --output human --fail-on-warnings",
    "lint-svelte:fix": "svelte-check --workspace attractions --output human-verbose; svelte-check --workspace docs --output human-verbose",
    "lint-format": "prettier --plugin-search-dir=. --check .",
    "lint-format:fix": "prettier --plugin-search-dir=. --write .",
    "lint": "pnpm run lint-js && pnpm run lint-css && pnpm run lint-svelte && pnpm run lint-format",
    "lint:fix": "pnpm run lint-js:fix; pnpm run lint-css:fix; pnpm run lint-svelte:fix; pnpm run lint-format:fix",
    "docs:export": "pnpm run --dir docs export",
    "docs:build": "pnpm run --dir docs build",
    "docs:dev": "pnpm run --dir docs dev",
    "build": "pnpm run --dir attractions build",
    "prepare": "is-ci || husky install"
  },
  "workspaces": [
    "attractions",
    "docs"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/runtime": "^7.13.9",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "2.3.2",
    "prettier-plugin-svelte": "^2.3.0",
    "stylelint": "^13.11.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "svelte": "^3.35.0",
    "svelte-check": "^2.0.0",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "[^.]*.js": [
      "eslint --format=pretty",
      "eslint --max-warnings 0 --fix",
      "prettier --write"
    ],
    "*.svelte": [
      "eslint --format=pretty",
      "eslint --max-warnings 0 --fix",
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --max-warnings 0 --fix",
      "prettier --write"
    ]
  }
}
